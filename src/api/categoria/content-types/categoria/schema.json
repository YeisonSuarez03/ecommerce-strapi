{
  "kind": "collectionType",
  "collectionName": "categorias",
  "info": {
    "singularName": "categoria",
    "pluralName": "categorias",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 2000
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "isParent": {
      "type": "boolean",
      "default": true
    },
    "child_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::categoria.categoria",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isParent"
            },
            true
          ]
        }
      }
    }
  }
}
